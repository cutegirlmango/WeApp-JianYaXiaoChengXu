/**app.wxss**/
page {
  background: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.main-table {
  width: 100vw;
  height: 100vh;
}

.main-cell {
  width: 90vw;
  border-radius: 20rpx;
  margin: 30rpx 5vw;
  
  background: white;

  display: flex;
  flex-direction: column;

  overflow: hidden;
}

.main-cell .header {
  height: 100rpx;

  display: flex;
  align-items: center;

  margin: 20rpx 0;
}

.main-cell .header .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;

  margin: 0 20rpx;

  background: lightgray;
}


.main-cell .content .video {
  width: 100%;
}

.main-cell .content .text {
  display: block;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;

  padding: 20rpx;
  padding-top: 0;

  font-size: 40rpx;
  font-weight: 300;
}


