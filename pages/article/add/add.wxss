/* pages/article/add/add.wxss */
.bg, .bg image {
  width: 100vw;
  height: 100vh;
} 

.body {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
}

.tool {
  width: 100vw;
  height: 100rpx;
  position: fixed;
  bottom: 0;

  background: white;
} 

.tool-body {
  width: 100vw;
  height: 100rpx;

  display: flex;
}

.tool .item {
  flex: 1;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.tool .item image {
  width: 40rpx;
  height: 40rpx;
}

.tool .item text {
  font-size: 25rpx;
  color: #333;
}

.tool .finish {
  width: 150rpx;
  background: #f1f1f1;
  font-size: 35rpx;

  display: flex;
  justify-content: center;
  align-items: center;
}


.tool-plus {
  width: 100vw;
  height: 200rpx;
  background: white;
  
  position: fixed;
}

.background-scroll-view{
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  color: #808085;
}

.sticker-scroll-view {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  color: #727177;
}

.background-icon {
  width: 100rpx;
  height: 148rpx;
  margin: 30rpx 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 8rpx #828183;
}

.background-icon-sticker {
  width: 55rpx;
  height: 55rpx;
  margin: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 2rpx 2rpx 8rpx #828183;
}