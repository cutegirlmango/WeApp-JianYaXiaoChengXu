/* pages/article/list/list.wxss */
.collection-view {
    width: 100vw;
    height: 100vh;

    display: flex;
    flex-wrap: wrap;
    align-content:flex-start;
}

.collection-view .item {
    width: 40vw;
    margin: 50rpx 5vw;
    height: 400rpx;
    background: white;
    border-radius: 20rpx 50rpx 50rpx 20rpx;


    display: flex;
    justify-content: center;
    align-items: center;

    overflow: hidden;

    position: relative;
}

.item text {
    position: absolute;
    margin: auto;
    padding: 0 30rpx;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;

    word-break:break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: box;
    display: -webkit-box;
    line-clamp: 4;
    -webkit-line-clamp: 4;
    box-orient: vertical;
    -webkit-box-orient: vertical;

    color: #333;
}

.item .cover {
    width: 100%;
    height: 100%;

    filter: blur(20rpx);
    -webkit-filter: blur(20rpx);
}

.add-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.add-item image {
    width: 50rpx;
    height: 50rpx;
}

.add-item text {
    font-size: 30rpx;
    padding: 20rpx 0;
    color: #333;
}

.login {
    display: flex;
    justify-content: center;
    align-items: center;

    width: 100vw;
    height: 100vh;
}

.login button {
    width: 60vw;
}

