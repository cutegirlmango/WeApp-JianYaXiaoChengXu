page {
  background: white;
}

.cover {
  width: 100vw;
  height: 30vh;

  overflow: hidden;

  display: flex;
  justify-content: center;
  align-items: center;
}

.cover .upload {
  width: 100%;
  height: 100%;
}

.cover .select {
  width: 90rpx;
  height: 90rpx;
}

textarea {
  width: 100vw;
  height: 60vh;

  padding: 20rpx;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;

  background: white;
  border-top: 1rpx solid lightgray;
}

.publish {
  width: 150rpx;
  height: 80rpx;

  position: fixed;

  right: 20rpx;
  bottom: 20rpx;

  background: lightgray;

  display: flex;
  justify-content: center;
  align-items: center;

  border-radius: 40rpx;

  color: #555;
}